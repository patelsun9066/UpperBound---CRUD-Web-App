<html>

<head>
	<title>Update Vendors</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}"/>
</head>


<body>
    <div>
        <table border="1" cellpadding="5"> 
            <caption> <b>Editing Vendor:<b> </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>
<br>
<br>
<div id="update" style="display: block">
    <form id="UpdateVendor" action="/Update_Vendor/{{data[0].vendor_id}}" method="POST">
      <legend><strong>Update Vendor</strong></legend>
      <br>
        <fieldset class="fields">
            <input type="hidden" value="{{data[0].vendor_id}}" class="form-control" id="vendor_id" name="vendor_id" required>
            <label> name </label> <input type="text" class="form-control" id="name" name="name" value="{{data[0].name}}" required>
            <br>
            <br>
            <label> address </label> <input type="text" class="form-control" id="address" name="address" value="{{data[0].address}}" required>
            <br>
            <br>
            <label> contact name </label> <input type="text" class="form-control" id="contact_name" name="contact_name" value="{{data[0].contact_name}}" required>
            <br>
            <br>
            <label> contact phone number </label> <input type="text" class="form-control" id="contact_phone_number" name="contact_phone_number" value="{{data[0].contact_phone_number}}" required>
            <br>
            <br>
            <label> contact_email <input type="text" class="form-control" id="contact_email" name="contact_email" value="{{data[0].contact_email}}" required>
        </fieldset>
        <br>
        <input type="submit" value="Update Vendor" name="Update_Vendor" class="btn btn-primary" style="margin:.5rem;">
        <a href='/Vendors'><input class="btn" type="button" value="Cancel"></a>
    </form>

</html>