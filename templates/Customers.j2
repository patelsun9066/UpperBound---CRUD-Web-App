            <label> last name </label> <input type="text" name="last_name" placeholder="ex. Smith" required>
            <br>
            <br>
            <label> email </label> <input type="text" name="email" placeholder="ex. JohnSmith@gmail.com" required>
            <br>
            <br>
            <label> address </label> <input type="text" name="address" placeholder="ex. 99 Fakeadd Street, NJ 09934" required>
            <br>
            <br>
            <label> phone number </label> <input type="text" name="phone_number" placeholder="ex. 676-890-2323" required>
            <br>
            <br>
            <label> first purchase </label> <input type="date" name="first_purchase" placeholder="" required>
            <br>
            <br>
            <label> last purchase </label> <input type="date" name="last_purchase" placeholder="" required>
          </fieldset>
          <br>
          <input class="btn" type="submit" id="addCustomer" value="Add Customer" name="Add_Customer">
