<div id="browse" style="display: block">
    <h1>Customers</h1>
    <br>
    <p><strong>Browse Customers</strong></p>
    <table border="1" cellpadding="5">
{% if data %}
<thead>  
<tr>
    <!-- Iterate through each key in the first entry to get the
    column name -->
    {% for key in data[0].keys() %}
    
    <!-- Create a <th> tag with the key inside of it, this will be
    our header row -->
    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
      
    <!-- End of this for loop -->
    {% endfor %}
</tr>
<tbody>

<!-- Now, iterate through every cusomter in Customers -->
{% for item in data %}
<tr>
    <!-- Then iterate through every key in the current customer dictionary -->
    {% for key in item.keys() %}

    <!-- Create a <td> element with the value of that key in it -->
    <td>{{item[key]}}</td>
    {% endfor %}
    <!-- Create our edit/delete buttons -->
	<td><a href="Update_Customer/{{item.customer_id}}" class="btn btn-default">Edit</a></td>
	<td><a href="Delete_Customer/{{item.customer_id}}" class="btn btn-default">Delete</a></td>
</tr>
    {% endfor %}
{% endif %} 
</table>
<p></p>
<br>
</div> <!-- browse -->

<div id="insert" style="display: block">
    <form id="addCustomer" action="/Customers" method="post">
        <legend><strong>Add Customer</strong></legend>
        <br>
          <fieldset class="fields">
            <label> first name </label> <input type="text" name="first_name" placeholder="ex. John" required>
