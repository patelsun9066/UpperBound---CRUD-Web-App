<head>
    <title>Products to Sales</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}"/>
    <script language="JavaScript">
	function showform(dowhat) {
		/*
		 * four DIVS: browse, insert, update
		 * this function sets one visible the others not
		 */
		if(dowhat == 'insert') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'block';
			document.getElementById('edit').style.display = 'block';
            document.getElementById('delete').style.display = 'none';
		} else if(dowhat == 'update') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'block';
            document.getElementById('delete').style.display = 'none';
        } else if(dowhat == 'delete') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'block';
		} else if(dowhat == 'all') {
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'block';
			document.getElementById('edit').style.display = 'block';
            document.getElementById('delete').style.display = 'block'
		} else { //by default display browse
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'none';
            document.getElementById('delete').style.display = 'none';
		}
	}
	function newProductSale() {
		showform('insert');
	}
	function updateProductSale(pid) {
		showform('update');
	}
    function deleteProductSale(pid) {
		showform('delete');
	}
	function browseProductsSales() {
		showform('browse');
	}
	function showAll() {
		showform('all');
	}
	</script>
</head>

<body onload="browseProductsSales()>
[<a href="/">Page Navigator:</a> | 
<a href="/">Home</a> | 
<a href="/Customers">Customers</a> | 
<a href="/Products">Products</a> | 
<a href="/Purchase_Orders">Purchase Orders</a> | 
<a href="/Vendors">Vendors</a> | 
<a href="/Sales">Sales</a> | 
<a href="/Purchase_Orders_Products">Purchase Orders to Products</a> | 
<a href="/Products_Sales">Products to Sales</a> | 
<a href="/Status_Codes">Status Codes</a> ]
<br>
<br>
<div id="browse" style="display: block">
    <h1>Products to Sales</h1>
    <br>
    <p><strong>Browse Products to Sales</strong></p>
    <table border="1" cellpadding="5">
{% if data %}
<thead>  
<tr>
    <!-- Iterate through each key in the first entry to get the
    column name -->
    {% for key in data[0].keys() %}
    
    <!-- Create a <th> tag with the key inside of it, this will be
    our header row -->
    <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
      
    <!-- End of this for loop -->
    {% endfor %}
</tr>
<tbody>

<!-- Now, iterate through every purchase order to product in Purchase_Orders_to_Products -->
{% for item in data %}
<tr>
    <!-- Then iterate through every key in the current customer dictionary -->
    {% for key in item.keys() %}

    <!-- Create a <td> element with the value of that key in it -->
    <td>{{item[key]}}</td>
    {% endfor %}
    <!-- Create our edit/delete buttons -->
	<td><a href="Update_Product_Sale/{{item.product_sale_id}}" class="btn btn-default">Edit</a></td>
  <td><a href="Delete_Product_Sale/{{item.product_sale_id}}" class="btn btn-default">Delete</a></td>
</tr>
    {% endfor %}
{% endif %} 
</table>
<p></p>
<br>
</div> <!-- browse -->

<div id="insert" style="display: block">
    <form id="addProductSale" action="/Products_Sales" method="post">
        <legend><strong>Add Product to Sale</strong></legend>
        <br>
          <fieldset class="fields">
            <label> product id </label><select class="form-control" id="product_id" name="product_id" placeholder="" required>
                {% for product in products %}
                    <option value="{{ product['product_id'] }}"> {{product['name']}}</option> 
                <!-- End of this for loop -->
                {% endfor %} 
			      </select>
            <br>
            <br>
            <label> sale id </label><select class="form-control" id="sale_id" name="sale_id" placeholder="" required>
                {% for sale in sales %}
                    <option value="{{ sale['sale_id'] }}"> {{sale['sale_date']}}</option> 
                <!-- End of this for loop -->
                {% endfor %} 
			      </select>
            <br>
            <br>
            <label>  quantity sold </label> <input type="number" name="quantity_sold" placeholder="ex. 10" required>
            <br>
            <br>
            <label>  unit selling price </label> <input type="number" name="unit_selling_price" placeholder="ex. 5.99" step=".01" required>
            <br>
            <br>
            <label>  total price </label> <input type="number" name="total_price" placeholder="ex. 59.90 " step=".01" required>
          </fieldset>
          <br>
          <input class="btn" type="submit" id="addProductSale" value="Add Product to Sale" name="Add_Product_Sale">
	  </form> <!--add new product to sale-->
</div><!-- insert -->
<br>
<br>
</body>
</html>
